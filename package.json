{
  "name": "slidev",
  "preview": true,
  "displayName": "Slidev",
  "version": "0.2.0",
  "description": "Slidev support for VS Code",
  "publisher": "antfu",
  "license": "MIT",
  "icon": "res/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidevjs/slidev-vscode"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "commands": [
      {
        "command": "slidev.prev",
        "category": "Slidev",
        "title": "Go to previous slide",
        "icon": "$(chevron-up)"
      },
      {
        "command": "slidev.next",
        "category": "Slidev",
        "title": "Go to next slide",
        "icon": "$(chevron-down)"
      },
      {
        "command": "slidev.focus-side-panel",
        "category": "Slidev",
        "title": "Focus side panel",
        "icon": "res/logo-mono.svg"
      },
      {
        "command": "slidev.move-up",
        "category": "Slidev",
        "title": "Move slide up",
        "icon": "$(triangle-up)"
      },
      {
        "command": "slidev.move-down",
        "category": "Slidev",
        "title": "Move slide down",
        "icon": "$(triangle-down)"
      },
      {
        "command": "slidev.preview-refresh",
        "category": "Slidev",
        "title": "Preview Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "slidev.markdown-to-html",
        "category": "Slidev",
        "title": "Convert current selection to HTML"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "slidev-enabled && resourceLangId == markdown",
          "command": "slidev.prev",
          "group": "navigation"
        },
        {
          "when": "slidev-enabled && resourceLangId == markdown",
          "command": "slidev.next",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "slidev.move-up",
          "when": "view =~ /slidev-slides/",
          "group": "inline@1"
        },
        {
          "command": "slidev.move-down",
          "when": "view =~ /slidev-slides/",
          "group": "inline@1"
        }
      ],
      "view/title": [
        {
          "command": "slidev.preview-refresh",
          "when": "view =~ /slidev-preview/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Slidev",
      "properties": {
        "slidev.port": {
          "type": "number",
          "scope": "window",
          "description": "The port of Slidev server",
          "default": 3030
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slidev",
          "title": "Slidev",
          "icon": "res/logo-mono.svg",
          "when": "slidev-enabled"
        }
      ]
    },
    "views": {
      "slidev": [
        {
          "id": "slidev-slides",
          "name": "Slides",
          "when": "slidev-enabled"
        },
        {
          "type": "webview",
          "id": "slidev-preview",
          "name": "Preview",
          "when": "slidev-enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsup src/index.ts --dts --external=vscode",
    "dev": "npm run build -- --watch",
    "release": "npx bumpp --commit --tag --push && vsce publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.6.5",
    "@antfu/utils": "^0.1.6",
    "@slidev/parser": "^0.19.4",
    "@slidev/types": "^0.19.4",
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^15.12.0",
    "@types/vscode": "^1.52.0",
    "eslint": "^7.27.0",
    "got": "^11.8.2",
    "markdown-it": "^12.0.6",
    "pkg-up": "^3.1.0",
    "tsup": "^4.11.2",
    "types-package-json": "^2.0.39",
    "typescript": "^4.3.2"
  }
}
